<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.innovathon.sideways.main.MainActivity"
    android:background="#ffffff">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/row1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/screen_margin_start"
        android:layout_marginLeft="@dimen/screen_margin_start"
        android:layout_marginEnd="@dimen/screen_margin_end"
        android:layout_marginRight="@dimen/screen_margin_end"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/location_subtype_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_2_10_none" />

            <TextView
                android:id="@+id/location_subtype_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_subtype_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="Location Sub-Type"
                android:textColor="@color/black"
                android:textSize="@dimen/send_location_textview_medium_size"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>


        <View
            android:id="@+id/row2_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row1"
            android:layout_marginEnd="@dimen/screen_margin_end"
            android:layout_marginLeft="@dimen/screen_margin_start"
            android:layout_marginRight="@dimen/screen_margin_end"
            android:layout_marginStart="@dimen/screen_margin_start"
            android:layout_marginTop="60dp"
            android:background="@color/black_overlay"
            android:visibility="visible" />


    <LinearLayout
        android:id="@+id/row2"
        android:layout_below="@+id/row2_top_line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="@dimen/screen_margin_start"
        android:layout_marginLeft="@dimen/screen_margin_start"
        android:layout_marginEnd="@dimen/screen_margin_end"
        android:layout_marginRight="@dimen/screen_margin_end"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/send_location_type_image"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_2_11_picture" />

            <TextView
                android:id="@+id/location_image_placeholder_msg"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/text_label_bkgrnd"
                android:gravity="center_horizontal|center_vertical"
                android:text="No Picture Available."
                android:textColor="@color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/send_location_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_location_type_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="No comment posted"
                android:textColor="@color/black"
                android:textSize="@dimen/send_location_textview_smaller_size"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>


        <View
            android:id="@+id/row3_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row2"
            android:layout_marginEnd="@dimen/screen_margin_end"
            android:layout_marginLeft="@dimen/screen_margin_start"
            android:layout_marginRight="@dimen/screen_margin_end"
            android:layout_marginStart="@dimen/screen_margin_start"
            android:layout_marginTop="25dp"
            android:background="@color/black_overlay"
            android:visibility="visible" />

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row3_top_line"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/screen_margin_start"
        android:layout_marginLeft="@dimen/screen_margin_start"
        android:layout_marginEnd="@dimen/screen_margin_end"
        android:layout_marginRight="@dimen/screen_margin_end">

        <LinearLayout
            android:id="@+id/row3_col1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/row3_col1_image_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/receive_location_notthere_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_not_there2" />

                <TextView
                    android:id="@+id/receive_location_notthere_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receive_location_notthere_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black_overlay"
                    android:textSize="@dimen/send_location_textview_smaller_size" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3_col2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/receive_location_thumpup_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_thumb_up_black_48dp"
                    />

                <TextView
                    android:id="@+id/receive_location_thumpup_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="@dimen/send_location_textview_smaller_size"
                    android:textColor="@color/black_overlay"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


        <View
            android:id="@+id/row3_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row3"
            android:layout_marginEnd="@dimen/screen_margin_end"
            android:layout_marginLeft="@dimen/screen_margin_start"
            android:layout_marginRight="@dimen/screen_margin_end"
            android:layout_marginStart="@dimen/screen_margin_start"
            android:layout_marginTop="30dp"
            android:background="@color/black_overlay"
            android:visibility="visible" />


    <LinearLayout
        android:id="@+id/row4"
        android:layout_below="@+id/row3_bottom_line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/screen_margin_start"
        android:layout_marginLeft="@dimen/screen_margin_start"
        android:layout_marginEnd="@dimen/screen_margin_end"
        android:layout_marginRight="@dimen/screen_margin_end"
        android:layout_centerHorizontal="true">
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>